<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <include
        layout="@layout/include_layout_top_title"/>

    <LinearLayout
        android:id="@+id/action_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="?attr/selectableItemBackground"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_settings"
            android:tint="@color/color_blue"
            android:tintMode="src_in"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_setting"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="?attr/selectableItemBackground"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_background"
            android:tint="@color/color_blue"
            android:tintMode="src_in"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_background"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_night"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="?attr/selectableItemBackground"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_night"
            android:tint="@color/color_blue"
            android:tintMode="src_in"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_night"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_timer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="?attr/selectableItemBackground"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_timer"
            android:tint="@color/color_blue"
            android:tintMode="src_in"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_timer"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_collect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="?attr/selectableItemBackground"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_about"
            android:tint="@color/color_blue"
            android:tintMode="src_in"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_exit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="?attr/selectableItemBackground"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_exit"
            android:tint="@color/color_blue"
            android:tintMode="src_in"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_exit"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:background="?attr/selectableItemBackground"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_about"
            android:tint="@color/color_blue"
            android:tintMode="src_in"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_about"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

</LinearLayout>